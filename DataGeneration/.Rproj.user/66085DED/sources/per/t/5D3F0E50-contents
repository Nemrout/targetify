```{r}

row_count <- 1221

page_main.data <- generate.data(
  lambda = 0.05, 
  clicks.min = 2, 
  clicks.max = 20, 
  lifetime.min = 3, 
  lifetime.max = 120, 
  china.count = 6, 
  india.count = 5, 
  safari.count = 4, 
  chrome.count = 8, 
  clicks.factor = 2.11,
  lifetime.factor = 1.56
)

row_count <- 608

