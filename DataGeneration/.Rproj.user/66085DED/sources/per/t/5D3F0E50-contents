page_pricing.data <- generate.data(
  lambda = 0.55, 
  clicks.min = 2, 
  clicks.max = 25, 
  lifetime.min = 5, 
  lifetime.max = 145, 
  china.count = 4, 
  india.count = 8, 
  safari.count = 7, 
  chrome.count = 10, 
  clicks.factor = 1.77,
